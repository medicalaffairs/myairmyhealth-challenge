<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :firstname, "First name" %><br />
  <%= f.text_field :firstname, :autofocus => true %></div>

  <div><%= f.label :lastname, "Last name" %><br />
  <%= f.text_field :lastname %></div>

  <div><%= f.label :email, "E-mail (only @philips.com addresses will be registered) " %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password, "Password" %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, "Confirm password" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
